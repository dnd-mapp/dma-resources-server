// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
    provider   = "prisma-client"
    output     = "../src/prisma-client"
    engineType = "client"
}

datasource db {
    provider          = "mysql"
    url               = env("MARIADB_URL")
    shadowDatabaseUrl = env("MARIADB_SHADOW_URL")
}

model Spells {
    id   String @id() @default(nanoid())
    name String @unique(map: "uq_spell_name")

    @@map(name: "spells")
}
